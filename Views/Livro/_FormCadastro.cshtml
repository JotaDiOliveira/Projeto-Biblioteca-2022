@using Biblioteca.Models
@model Livro
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4" onsubmit="return validaDados()">
        <input type="hidden" asp-for="Id" />
        
        <div class="form-group">
            <label asp-for="Titulo">Titulo</label>
            <input asp-for="Titulo" id="txtTitulo" class="form-control" required/>
            <span class="msg-erro msg-Titulo"></span>
        </div>

        <div class="form-group">
            <label asp-for="Autor">Autor</label>
            <input asp-for="Autor" id="txtAutor" class="form-control" required/>
            <span class="msg-erro msg-Autor"></span>
        </div>

        <div>
            <label asp-for="Ano">Ano</label>
            <input asp-for="Ano" id="txtAno" required/>
            <span class="msg-erro msg-Ano"></span>
        </div>

        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>